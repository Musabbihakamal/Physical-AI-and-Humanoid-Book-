# Root project environment variables example
# Copy this file to .env and update the values

# Project configuration
PROJECT_NAME=Book RAG Multi-Agent System
PROJECT_VERSION=1.0.0
DEBUG=True

# Database configuration
# For development: sqlite:///./data/book_agent_system.db
# For production: postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///./data/book_agent_system.db

# API configuration (add your actual keys before production)
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# Vector Database configuration
QDRANT_URL=your_qdrant_url_here
QDRANT_API_KEY=your_qdrant_api_key_here

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Other settings
WORKERS=1
LOG_LEVEL=INFO